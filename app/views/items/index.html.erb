<h1>Listing items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Begin at</th>
    <th>End at</th>
    <th>Url</th>
    <th>Address</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Kind</th>
    <th>Created by</th>
    <th>Approved by</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.title %></td>
    <td><%=h item.description %></td>
    <td><%=h item.begin_at %></td>
    <td><%=h item.end_at %></td>
    <td><%=h item.url %></td>
    <td><%=h item.address %></td>
    <td><%=h item.latitude %></td>
    <td><%=h item.longitude %></td>
    <td><%=h item.kind %></td>
    <td><%=h item.created_by_id %></td>
    <td><%=h item.approved_by_id %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>