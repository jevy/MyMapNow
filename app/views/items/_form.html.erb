<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :kind %><br />
    <%= f.select :kind, Item::KINDS.map{|k| [k.humanize, k]} %>
  </p>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_area :address, :rows => 4 %>
  </p>
  <p>
    <%= f.label :begin_at %><br />
    <%= f.text_field :begin_at, :class => 'datepicker' %>
  </p>
  <p>
    <%= f.label :end_at %><br />
    <%= f.text_field :end_at, :class => 'datepicker' %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>