<!DOCTYPE html>
<html>
  <head>
    <title>MyMapNow.com</title>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <%- if protect_against_forgery? -%>
      <meta name="authenticity-token" id="authenticity-token" content="<%= form_authenticity_token %>">
    <%- end -%>
    <%= stylesheet_link_tag 'dialog/jquery-ui-1.7.2.custom.css', 'layout', :cache => true %>
    <!--[if IE]>
    <%= javascript_include_tag 'html5' %>
    <![endif]-->
    <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script src="http://j.maxmind.com/app/geoip.js"></script>
    <script src="http://simile.mit.edu/timeline/api/timeline-api.js" type="text/javascript"></script>
    <%= javascript_include_tag 'jquery-1.3.2.min', 'jquery-ui-1.7.2.custom.min', 'perfecttime/PerfectTime', 'old_map', 'jquery.form', :cache => true %>
    <%= javascript_include_tag 'timeline' %>
    <%= javascript_include_tag 'geoip', 'map' %>
    <%= javascript_include_tag 'items' %>
    <script type="text/javascript">
    <!--
    function submitenter(myfield,e)
    {
    var keycode;
    if (window.event) keycode = window.event.keyCode;
    else if (e) keycode = e.which;
    else return true;

    if (keycode == 13)
       {
       Map.search($('#search-box').val());
       return false;
       }
    else
       return true;
    }
    //-->
    </script>
  </head>
  <body onload="Map.initialize(); Map.updateSearchBoxWithCurrentLocation();">
    <wrapper>
      <sidebar-wrapper>
        <sidebar-header>
          <img src="/images/mymapnow_logo.png" />
        </sidebar-header>
        <sidebar-search>
          <button class="search" onclick="Map.whatsMyLocation();">&nbsp;</button>
          <input type="text" id="search-box" name="search-box" value=" " onKeyPress="return submitenter(this,event)" />
        </sidebar-search>
        <aside>
          <ol></ol>
        </aside>
        <sidebar-footer>
        <div id="spacer">
          <%= link_to('<span>Add Event</span>', new_item_path, :id => 'add-event') %>
        </div>
          <!-- <a class="copyright" href="#">About MyMapNow</a><br /><a class="copyright" href="#">Privacy Policy</a> -->
        </sidebar-footer>
      </sidebar-wrapper>
      <div id="map-wrapper">
        <div id="map"></div>
      </div>
      <div>
        <%= yield %>
      </div>
      <div id="timeline-wrapper">
        <div id="timeline"></div>
      </div>
    </wrapper>
  </body>
</html>

<script>Map.initialize();</script>